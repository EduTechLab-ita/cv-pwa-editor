                placeholder="Nome piattaforma o software"
              />
              <button
                onClick={() => {
                  const newPlatforms = cvData.skills.platforms.items.filter((_, i) => i !== index);
                  setCvData(prev => ({
                    ...prev,
                    skills: {
                      ...prev.skills,
                      platforms: {
                        ...prev.skills.platforms,
                        items: newPlatforms
                      }
