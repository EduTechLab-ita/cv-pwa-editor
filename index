  const SkillsEditor = () => (
    <div className="space-y-8">
      <h3 className="text-lg font-semibold text-blue-800">Competenze</h3>
      
      {/* Competenze AI */}
      <div className="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
